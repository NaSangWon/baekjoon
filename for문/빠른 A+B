#include <stdio.h>

int main() {
	int t;

	scanf("%d", &t);

	int *answer = (int *)malloc(sizeof(int)* 1000000);
	int index = 0;

	for (int i = 0; i < t; i++) {
		int a, b;
		scanf("%d %d", &a, &b);
		answer[index++] = a + b;
	}

	for (int i = 0; i < index; i++) {
		printf("%d\n", answer[i]);
	}

	return 0;
}

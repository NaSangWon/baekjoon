#include <stdio.h>

int main() {
	char ox[80];
	int n;

	scanf("%d", &n);

	for (int i = 0; i < n; i++) {
		int score = 0;
		scanf("%s", ox);
		int index = 0;
		while (ox[index] != '\0') {
			if (ox[index] == 'O') {
				int countO = 1;
				for (int j = index - 1; j >= 0; j--) {
					if (ox[j] == 'O')
						countO++;
					else
						break;
				}
				score += countO;
			}
			index++;
		}
		printf("%d\n", score);
		ox[0] = '\0';
	}

	return 0;
}

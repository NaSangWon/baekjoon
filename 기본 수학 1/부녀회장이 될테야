#include <stdio.h>

int getNum(int K, int N) {
	if (N == 1)
		return 1;
	if (K == 0)
		return N;
	return (getNum(K, N - 1) + getNum(K - 1, N));
}

int main() {
	int T;

	scanf("%d", &T);

	for (int t = 0; t < T; t++) {
		int K, N;
		int sum = 0;

		scanf("%d", &K);
		scanf("%d", &N);

		printf("%d\n", getNum(K, N));
	}

	return 0;
}
